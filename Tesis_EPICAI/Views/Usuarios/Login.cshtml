@model Tesis_EPICAI.ViewModels.Usuarios.Login
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Iniciar sesión";
}

    <div class="col-6 align-content-sm-center ">
        <h1>Iniciar sesión</h1>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="col-form-label"></label>
                <input asp-for="Nombre" placeholder="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-form-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <button class="btn btn-primary">Entrar</button>
        </form>
    </div>

